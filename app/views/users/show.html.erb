<%= render "shared/page_title", title: "Profile: #{@user.username}" %>
<div class="container py-4">
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <dl class="row mb-0">
        <dt class="col-sm-3 text-muted">Username:</dt>
        <dd class="col-sm-9"><%= @user.username %></dd>
      </dl>
    </div>
  </div>
  <h5><%= @user.username %>'s Activity</h5>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "Posts (#{@user.posts.size})",
                user_path(@user),
                class: "nav-link #{'active' if params[:tab].nil?}" %>
    </li>
    <li class="nav-item">
      <%= link_to "Comments (#{@user.comments.size})",
                user_path(@user, tab: 'comments'),
                class: "nav-link #{'active' if params[:tab] == 'comments'}" %>
    </li>
  </ul>
  <% if params[:tab].nil? %>
    <% @user.posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  <% elsif params[:tab] == 'comments' %>
    <% @user.comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment, show_post: true %>
    <% end %>
  <% end %>
</div>
