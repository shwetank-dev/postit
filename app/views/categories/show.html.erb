<% all_posts = link_to('All Posts', posts_path, class: "text-decoration-none") %>
<%= render "shared/page_title", title: "#{all_posts} &raquo; #{@category.name}".html_safe%>
<main>
  <ul class="list-unstyled">
    <% @category.posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </ul>
</main>