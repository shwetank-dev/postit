<% show_creator ||= false %>
<li class="mb-4 d-flex align-items-center">
  <% if logged_in? %>
    <aside class="vote-widget me-2" aria-label="Voting controls">
      <%= button_to vote_post_path(post, vote: true), method: 'post' do %>
        <span class="vote-btn vote-up" aria-label="Upvote">▲</span>
      <% end %>
      <span class="vote-count"><%= post.total_votes %></span>
      <%= button_to vote_post_path(post, vote: false), method: 'post' do %>
        <span class="vote-btn vote-down" aria-label="Downvote">▼</span>
      <% end %>
    </aside>
  <% end %>
  <article class="card shadow-sm border-0">
    <div class="card-body">
      <header>
        <%= render "shared/category_list", categories: post.categories %>
        <h4 >
          <%= link_to post.title, post_path(post.id) %>
        </h4>
      </header>
      <p class="text-secondary mb-3"><%= post.description %></p>
      <footer class="text-muted small d-flex flex-wrap gap-2">
        <% if show_creator %>
          <span>Posted by <%= link_to post.creator.username, user_path(post.creator)%></span>
          <span>•</span>
        <% end %>
        <span><%= post.created_at.strftime("%b %d, %Y") %></span>
        <span>•</span>
        <span>
          <%= link_to "#{post.comments.size} comments", post_path(post, anchor: "comments") %>
        </span>
      </footer>
    </div>
  </article>
</li>